{
    "manifest_version": 2,
    "name": "Minecraft Bug Tracker Info Collector",
    "version": "1.0",
    "description": "Collects bug information from Minecraft's bug tracker.",
    "permissions": [
        "activeTab",
        "http://bugs.mojang.com/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://bugs.mojang.com/projects/MC/issues/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}