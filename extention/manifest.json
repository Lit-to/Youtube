{
    "manifest_version": 3,
    "name": "Minecraft Bug Tracker Info Collector",
    "version": "1.0",
    "description": "Collects bug information from Minecraft's bug tracker.",
    "permissions": [
        "activeTab",
        "https://bugs.mojang.com/projects/MC/issues/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://bugs.mojang.com/projects/MC/issues/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}